{
  "name": "tos-bridge",
  "version": "1.0.1",
  "description": "TOS RTD Bridge - Streams real-time option data from ThinkOrSwim",
  "main": "main.js",
  "author": "SPX 0DTE Trader",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w winax",
    "postinstall": "electron-rebuild -f -w winax",
    "build": "npm run rebuild && electron-builder",
    "build:win": "npm run rebuild && electron-builder --win",
    "release:patch": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 -VersionType patch",
    "release:minor": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 -VersionType minor",
    "release:major": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 -VersionType major"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "winax": "^3.6.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.spx0dte.tos-bridge",
    "productName": "TOS Bridge",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "bridge-worker.js",
      "auto-updater.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "icon.ico",
      "node_modules/ws/**/*",
      "node_modules/winax/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "install-deps.bat",
        "to": "install-deps.bat"
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "artifactName": "TOS-Bridge-Setup-${version}.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "johndowbs",
      "repo": "tos-bridge",
      "releaseType": "release"
    }
  }
}
